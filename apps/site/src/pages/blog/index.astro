---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import ThemeSwitcher from '../../components/ThemeSwitcher.astro';
import { getSiteData } from '../../utils/data';

const data = await getSiteData();
const { profile, blogEnabled, blogPosts, colorTheme } = data;

if (!blogEnabled) {
  return Astro.redirect('/');
}
---

<BaseLayout title={`Blog - ${profile.name || 'Portfolio'}`}>
  <ThemeSwitcher colorTheme={colorTheme || 'ocean'} />
  <Navigation profile={profile} blogEnabled={blogEnabled} />
  <main class="min-h-screen py-20">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center mb-12">Blog</h1>
      <div class="max-w-4xl mx-auto">
        {blogPosts.filter(post => post.status === 'published').length > 0 ? (
          <div class="space-y-8">
            {blogPosts.filter(post => post.status === 'published').map((post) => (
              <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
                {post.featuredImage && (
                  <img 
                    src={post.featuredImage} 
                    alt={post.title}
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-6">
                  <h2 class="text-2xl font-semibold mb-2">
                    <a href={`/blog/${post.slug}`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                      {post.title}
                    </a>
                  </h2>
                  <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-4">
                    <time>{new Date(post.date).toLocaleDateString()}</time>
                    {post.tags && post.tags.length > 0 && (
                      <div class="flex gap-2">
                        {post.tags.map(tag => (
                          <span class="px-2 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded text-xs">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                  <p class="text-gray-600 dark:text-gray-300 whitespace-pre-line">{post.excerpt}</p>
                  <a href={`/blog/${post.slug}`} class="inline-block mt-4 text-primary-600 dark:text-primary-400 hover:underline">
                    Read more â†’
                  </a>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center text-gray-500 dark:text-gray-400">
            <p>No blog posts available yet.</p>
          </div>
        )}
      </div>
    </div>
  </main>
</BaseLayout>