---
interface Props {
  username: string;
}

const { username } = Astro.props;
---

{username && (
  <section id="github" class="py-20 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">GitHub Contributions</h2>
      <div class="max-w-4xl mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-semibold">Recent Activity</h3>
            <a
              href={`https://github.com/${username}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
            >
              View Profile â†’
            </a>
          </div>
          <div id="github-stats" class="space-y-4">
            <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-900 rounded-lg">
              <span class="text-gray-600 dark:text-gray-300">Loading GitHub data...</span>
            </div>
          </div>
          <div class="mt-6">
            <img
              src={`https://ghchart.rshah.org/409ba5/${username}`}
              alt="GitHub Contributions"
              class="w-full rounded-lg"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
)}

<script define:vars={{ username }}>
  if (username) {
    fetch(`https://api.github.com/users/${username}`)
      .then(res => res.json())
      .then(data => {
        const statsEl = document.getElementById('github-stats');
        if (statsEl) {
          statsEl.innerHTML = `
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              <div class="p-4 bg-gray-50 dark:bg-gray-900 rounded-lg">
                <div class="text-2xl font-bold text-primary-600 dark:text-primary-400">${data.public_repos}</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Repositories</div>
              </div>
              <div class="p-4 bg-gray-50 dark:bg-gray-900 rounded-lg">
                <div class="text-2xl font-bold text-primary-600 dark:text-primary-400">${data.followers}</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Followers</div>
              </div>
              <div class="p-4 bg-gray-50 dark:bg-gray-900 rounded-lg">
                <div class="text-2xl font-bold text-primary-600 dark:text-primary-400">${data.following}</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Following</div>
              </div>
              <div class="p-4 bg-gray-50 dark:bg-gray-900 rounded-lg">
                <div class="text-2xl font-bold text-primary-600 dark:text-primary-400">${data.public_gists}</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Gists</div>
              </div>
            </div>
          `;
        }
      })
      .catch(err => {
        console.error('Failed to fetch GitHub data:', err);
      });
  }
</script>