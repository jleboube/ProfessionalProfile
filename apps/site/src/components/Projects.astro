---
import type { Project } from '../utils/data';

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;

// Filter to only show featured projects (max 6)
const featuredProjects = projects
  .filter(project => project.featuredOnHome)
  .slice(0, 6);
---

<section id="projects" class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4">Featured Projects</h2>
      <a href="/projects" class="text-primary-600 dark:text-primary-400 hover:underline">
        View All Projects →
      </a>
    </div>
    <div class="flex flex-wrap justify-center gap-8 max-w-6xl mx-auto">
      {featuredProjects.length > 0 ? (
        featuredProjects.map((project) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow w-full md:w-[calc(50%-1rem)] lg:w-[calc(33.333%-1.34rem)] max-w-sm">
            {project.image && (
              <img
                src={project.image}
                alt={project.name}
                class="w-full h-48 object-cover"
              />
            )}
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">{project.name}</h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4 whitespace-pre-line">{project.description}</p>
              <div class="flex gap-4">
                {project.url && (
                  <a
                    href={project.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
                  >
                    Live Demo →
                  </a>
                )}
                {project.source && (
                  <a
                    href={project.source}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-600 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300"
                  >
                    Source Code →
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
      ) : (
        <div class="col-span-full text-center text-gray-500 dark:text-gray-400">
          <p>No projects available yet.</p>
        </div>
      )}
    </div>
  </div>
</section>