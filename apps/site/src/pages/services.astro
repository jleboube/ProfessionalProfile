---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';
import ServicesDetail from '../components/ServicesDetail.astro';
import Contact from '../components/Contact.astro';
import { getSiteData } from '../utils/data';

const data = await getSiteData();
const { profile, services, blogEnabled, colorTheme } = data;
const ownerName = profile.name || 'Portfolio';
const pageDescription = `Explore the professional services ${ownerName} offers and find the right way to work together.`;
---

<BaseLayout title={`Services - ${ownerName}`} description={pageDescription}>
  <ThemeSwitcher colorTheme={colorTheme || 'ocean'} />
  <Navigation profile={profile} blogEnabled={blogEnabled} />
  <main class="min-h-screen py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="mb-8">
          <a href="/" class="text-primary-600 dark:text-primary-400 hover:underline mb-4 inline-block">
            ‚Üê Back to Home
          </a>
        </div>

        <header class="mb-12 text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">Professional Services</h1>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            Strategic partnerships and hands-on expertise to accelerate your digital initiatives.
          </p>
        </header>

        <ServicesDetail services={services} profile={profile} />
      </div>
    </div>

    <div class="mt-24">
      <Contact profile={profile} />
    </div>
  </main>
</BaseLayout>
