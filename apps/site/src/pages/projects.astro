---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';
import ProjectsDetail from '../components/ProjectsDetail.astro';
import { getSiteData } from '../utils/data';

// Server-side rendering - get data at request time
const data = await getSiteData();
const { profile, projects, blogEnabled, colorTheme } = data;
---

<BaseLayout title={`Projects - ${profile.name || 'Portfolio'}`}>
  <ThemeSwitcher colorTheme={colorTheme || 'ocean'} />
  <Navigation profile={profile} blogEnabled={blogEnabled} />
  <main class="min-h-screen py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="mb-8">
          <a href="/" class="text-primary-600 dark:text-primary-400 hover:underline mb-4 inline-block">
            ‚Üê Back to Home
          </a>
        </div>

        <header class="mb-12 text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">All Projects</h1>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            A complete showcase of my work and achievements
          </p>
        </header>

        <ProjectsDetail projects={projects} />
      </div>
    </div>
  </main>
</BaseLayout>
